<div class="navbar">
  <div class="d-flex justify-content-between container-fluid">
    <div class="logo">
      <%= link_to dashboard_path do %>
        <%= image_tag "https://res.cloudinary.com/ddfjqexgw/image/upload/v1694003099/lookat_mq35gt.png" %>
      <% end %>
    </div>
    <h1 class="page-title"><strong><%= @page_title %></strong></h1>
    <div class="d-flex nav-item dropdown">
      <div class="notification-icon">
        <img src="https://res.cloudinary.com/ddfjqexgw/image/upload/v1693821738/notifications_dkq551.png"/>
        <div class="pending-count <%= 'show' if @pending_requests_count > 0 %>">
          <%= link_to profile_path, class:"text-white" do %>
            <%= @pending_requests_count %>
          <% end %>
        </div>
      </div>
      <a href="#" class="user-profile" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <% if current_user.picture? %>
          <img src="https://res.cloudinary.com/dbe6henkk/image/upload/v1693559281/<%= current_user.picture %>" />
        <% else %>
          <%= image_tag "https://res.cloudinary.com/ddfjqexgw/image/upload/v1693490930/DefaultAvatar_zwdogj.jpg" %>
        <% end %>
      </a>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "Profile", profile_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </div>
  </div>
</div>
