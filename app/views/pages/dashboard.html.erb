<%= render "shared/navbar" %>
<div class="container">
  <div class="map d-flex justify-content-center mt-3">
    <div style="width: 90%; height: 258px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <h2 class="text-center mt-3"><strong>Upcoming Sessions</strong></h2>
  <% @my_sessions.each do |session| %>
    <div class="session-card">
      <div class="session-details">
        <%= link_to group_session_path(session.group, session) do %>
          <div class="session-name"><%= session.name %></div>
          <p>Date: <%= session.time.strftime('%-d %B %Y') %></p>
          <p>Hour: <%= session.time.strftime('%H:%M') %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= render "shared/navbar_bottom" %>
