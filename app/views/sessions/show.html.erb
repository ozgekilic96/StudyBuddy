<h1><%= @session.name %></h1>

<p><strong>Description:</strong> <%= @session.description %></p>
<p><strong>Address:</strong> <%= @session.address %></p>

<% if current_user == @session.user %>
  <%= link_to "Edit", edit_session_path(@session) %>
<% end %>

<% if current_user != @session.user && current_user.memberships.find_by(session_id: @session.id).nil? %>
  <%= link_to "Join Session", join_session_path(@session), method: :post %>
<% end %>

<%= link_to "Back to Sessions", sessions_path %>






